<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>GoSlang</title>
    <script src="/public/vendor/jquery-3.2.0.min.js"></script>
    <script src="https://unpkg.com/vue"></script>
    <script>
    function getParameterByName(name, url) {
      if (!url) {
        url = window.location.href;
      }
      name = name.replace(/[\[\]]/g, "\\$&");
      const regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
          results = regex.exec(url);
      if (!results) return null;
      if (!results[2]) return '';
      return decodeURIComponent(results[2].replace(/\+/g, " "));
    }
    let conn
    </script>
  </head>
  <body>
      <div class="message">
        <ul id="message-list">
          {{if .Messages}}
            {{range .Messages}}
              <li>{{.}}</li>
            {{end}}
          {{else}}
            <li></li>
          {{end}}
        </ul>
      </div>
    <div id="send-message">
      <form id="sumbit" class="message" @submit.prevent="submitNewMessage">
        <input v-model="newMessageText" />
      </form>
    </div>
  </body>
  <script src="/public/js/chat.js"></script>
  <script>
    const messageFactor = (msg) => ({
      message: msg,
      room: getParameterByName('room')||'main',
      time: Math.trunc(new Date().getTime()/1000)
    })
    window.onload = function(){
      if (window["WebSocket"]) {
        conn = new WebSocket("ws://" + document.location.host + "/ws?room=" + (getParameterByName('room')||'main') )
        conn.onmessage = function(evt){
          let message = JSON.parse(event.data)
          const $message = $('<li>').text(message.message)
          $("#message-list").prepend($message)
        }
      }
    }
  </script>
</html>
