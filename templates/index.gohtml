<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>GoSlang</title>
    <script
      src="https://code.jquery.com/jquery-3.2.1.min.js"
      integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
      crossorigin="anonymous">
    </script>
  </head>
  <body>
      <div class="message">
        <ul id="message-list">
          {{if .Messages}}
            {{range .Messages}}
              <li>{{.}}</li>
            {{end}}
          {{else}}
            <li></li>
          {{end}}
        </ul>
      </div>
    <div class="send-message">
      <form id="sumbit" class="message">
        <input id="new-message" type="text" value="" />
      </form>
    </div>
  </body>
  <script>
    let conn
    window.onload = function(){
      document.getElementById('sumbit').onsubmit = function(evt){
        if (!conn){
          return false
        }
        conn.send(document.getElementById('new-message').value)
        document.getElementById('new-message').value = ""
        return false;
      }
      if (window["WebSocket"]) {
        conn = new WebSocket("ws://" + document.location.host + "/ws")
        conn.onmessage = function(evt){
          const message = evt.data;
          const $message = $('<li>').text(message);
          $("#message-list").prepend($message)
        }
      }
    }
  </script>
</html>
